# ~/.gitconfig
#
# Run
#     git config --global user.email "you@example.com"
#     git config --global user.name "your name"
# to set your account's default identity.
#
# Omit --global to set the identity only in specific repository.

[user]
    name = phwater
    email = "(none)"
[color]
    ui = auto
[core]
    excludesfile = ~/.gitrc/git_ignore_global
[commit]
    template = ~/.gitrc/git_commit_template
[push]
    default = simple
[alias]
    ck = checkout
    cm = commit
    st = status
    br = branch
    rb = rebase
    sh = stash
    pr = pull --rebase
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    last = log -1 HEAD
    visual = !gitk --max-count=100 --all
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[difftool]
    prompt = false
[http]
   ;proxy = http://127.0.0.1:8087
[https]
   ;proxy = http://127.0.0.1:8087
